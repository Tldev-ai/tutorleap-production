supplementaryExams: {
  'CBSE': [
    '• COMPARTMENT EXAMINATION SYSTEM:',
    '  - Eligibility Criteria: Students failing in maximum 2 subjects in Class 10/12',
    '  - Minimum Requirement: Must secure at least 20% marks in failed subjects',
    '  - Essential Conditions: Cannot fail in more than two subjects',
    '  - Language Subject Restriction: If failed in language, can appear for only that subject',
    '  - Timeline: July examination session, results declared in August',
    '  - Application Process: Online registration through CBSE official website',
    '  - Required Documents: Admit card, mark sheet, compartment certificate',
    '  - Examination Fees: ₹300 per subject for Indian students, $50 for foreign students',
    '  - Examination Pattern: Same difficulty level and pattern as main examination',
    '  - Pass Criteria: Minimum 33% marks required in compartment subjects',
    '  - Certificate Validity: Compartment passed certificate equivalent to regular pass',
    '  - Attempt Limitation: Students can attempt compartment exam multiple times',
    '  - Grade Improvement: Can also appear for grade improvement in passed subjects'
  ],
  'ICSE': [
    '• SUPPLEMENTARY EXAMINATION SYSTEM:',
    '  - Universal Eligibility: Students who failed in any number of subjects',
    '  - No Subject Limitation: Unlike other boards, no restriction on number of subjects',
    '  - Flexible Timeline: May-June session, approximately 2-3 months after main results',
    '  - Application Deadline: Usually within 15 days of result declaration',
    '  - Examination Fees: ₹500 per subject for all candidates',
    '  - Question Paper Standards: Identical difficulty level and format as main exam',
    '  - Assessment Criteria: Same evaluation standards and marking scheme',
    '  - Internal Assessment: Previous internal marks carried forward',
    '  - Practical Examination: Required for science subjects if failed in main exam',
    '  - Result Declaration: Usually within 6-8 weeks of supplementary examination',
    '  - Certificate Issuance: Regular pass certificate issued upon clearing subjects',
    '  - Multiple Attempts: Students can appear for supplementary exams in subsequent years',
    '  - Grade Improvement Option: Can retake passed subjects for better grades'
  ],
  'IB': [
    '• RETAKE EXAMINATION SYSTEM:',
    '  - Individual Subject Retakes: Students can retake specific subjects independently',
    '  - Examination Sessions: May and November sessions available annually',
    '  - No Limitation: Can retake even successfully passed subjects for grade improvement',
    '  - Registration Fees: $119 per subject for retake examination',
    '  - Component Flexibility: Can retake specific components (papers) within subjects',
    '  - Best Grade Policy: Higher grade automatically replaces previous grade',
    '  - Diploma Eligibility: Must meet overall 24-point requirement for diploma',
    '  - Core Component Retakes: TOK, Extended Essay can be resubmitted',
    '  - Internal Assessment: New IA may be required for some subjects',
    '  - Grade Validity: No expiration date for IB grades',
    '  - University Recognition: Retaken grades fully accepted by universities',
    '  - Registration Process: Through IB coordinator at authorized schools',
    '  - Timeline Flexibility: Can retake subjects years after initial attempt'
  ],
